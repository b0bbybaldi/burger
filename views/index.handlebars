<h1>Roberto Baldizon's Bucketlist!</h1>

<div class="toachieve">
  <h2>Things to do:</h2>
  {{#each buckets}}
    {{#unless completed}}
      {{> buckets/bucket-block done=true}}
    {{/unless}}
  {{/each}}
</div>

<div class="achieved">
  <h2>Things that I've done:</h2>
  {{#each buckets}}
    {{#if completed}}
      {{> buckets/bucket-block done=false}}
    {{/if}}
  {{/each}}
</div>

<form class="create-form">
  <h2>Add a thing:</h2>
  <div class="form-group">
    <label for="bucket">Thing to do:</label>
    <input type="text" id="bucket" name="name">
  </div>

  <div class="form-group">
    <label for="don"></label>
    <input type="radio" name="completed" class="radio-inline" value="1" checked> Done!
    <input type="radio" name="completed" class="radio-inline" value="0"> To do! 
  </div>

  <button type="submit">Add thing</button>
</form>
